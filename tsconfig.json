{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@playwright/test": ["node_modules/@playwright/test"]
    }
  },
  "include": ["src/**/*.ts", "node_modules/@playwright/test"],
  "exclude": ["node_modules", "dist"]
}
